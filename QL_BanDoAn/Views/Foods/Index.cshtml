@model List<QL_BanDoAn.Models.Foods>
@using System.Web.Routing
@{
    ViewBag.Title = "Foods";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2 class="text-center">Foods</h2>
<a href="/Foods/Create/" style="margin-left:15%;">Create new food</a>
<table class="table table-bordered w-75 m-auto mt-3">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        if (item == null)
        {
            continue;
        }
        <tr>
            <td>
                <a href="/Foods/Detail/@item.Id/">@Html.DisplayFor(model => item.Title)</a>
            </td>
            <td>$ @Html.DisplayFor(model => item.Price)</td>
            <td>
                <a href="/Foods/Edit/@item.Id">Edit</a> |
                <a href="/Foods/Delete/@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>